# Database Configuration
DATABASE_URL=postgresql://xspensesai_user:xspensesai_password@localhost/xspensesai_db
REDIS_URL=redis://localhost:6379

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.1

# Security
SECRET_KEY=your_super_secret_key_here_make_it_long_and_random
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# File Storage
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_EXTENSIONS=pdf,csv,xlsx,xls,jpg,jpeg,png

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log
LOG_FORMAT=json

# API Configuration
API_V1_STR=/api/v1
PROJECT_NAME=XspensesAI Backend
VERSION=1.0.0
DESCRIPTION=AI-powered expense categorization and document processing

# CORS
BACKEND_CORS_ORIGINS=["http://localhost:3000", "http://localhost:3001", "http://localhost:3002", "http://localhost:3003", "http://localhost:3004"]

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# AI Learning Configuration
LEARNING_ENABLED=true
MIN_CONFIDENCE_THRESHOLD=0.7
MAX_LEARNING_EXAMPLES=1000
LEARNING_DECAY_FACTOR=0.95

# Performance
WORKER_PROCESSES=4
MAX_CONCURRENT_REQUESTS=100
CACHE_TTL=3600  # 1 hour in seconds 